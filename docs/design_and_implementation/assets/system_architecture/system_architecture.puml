@startuml
left to right direction

skinparam Component {
  BackgroundColor #EAF2FB
  BorderColor #4E79A7
  FontColor #1F2D3D
}
skinparam Package {
  BackgroundColor #F8F9FB
  BorderColor #93B5E1
  FontColor #1F2D3D
}

rectangle "GUI" as GUI

package "Singleton" {
  component "UX components\n(Theme, Audio, etc.)" as UX
  component "User Container" as UserContainer
}

package "Core Components (MVVM)" as Core {
  component "Auth" as Auth
  component "Kanban" as Kanban
  component "Calendar" as Calendar
  component "Discussion" as Discussion
  component "LLM" as LLM
}

database "devban DB\n(Firebase)" as DB #FFF4E6
cloud "User Management System\n(Firebase Auth)" as UMS #F0F7F0
cloud "LLM Provider API" as LLMAPI #F0F7F0

' GUI -> Services
GUI --> UX
GUI --> UserContainer
GUI --> Auth
GUI --> Discussion
GUI --> Kanban
GUI --> Calendar
GUI --> LLM

' Auth and user management
Auth --> UMS
Auth --> DB

' Persistence
UserContainer --> DB
Kanban --> DB
Calendar --> DB
Discussion --> DB

' LLM integration
LLM --> DB : LLM chat history
LLM --> LLMAPI : prompts

@enduml
